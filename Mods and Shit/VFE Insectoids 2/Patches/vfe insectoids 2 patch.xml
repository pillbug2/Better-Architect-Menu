<?xml version="1.0" encoding="utf-8" ?>
<Patch>


                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/DesignationCategoryDef[defName="VFEI2_Insectoids"]/order</xpath>
                    <value>
                        <order>2</order>
                    </value>
                </Operation>
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/DesignationCategoryDef[defName="VFEI2_Insectoids"]/label</xpath>
                    <value>
                        <label>Insectoids</label>
                    </value>
                </Operation>
                <Operation Class="PatchOperationAdd">
                    <success>Always</success>
                    <xpath>Defs/DesignationCategoryDef[defName="VFEI2_Insectoids"]</xpath>
                    <value>
                        <modExtensions>
                        <li Class="BetterArchitect.NestedCategoryExtension">
                            <parentCategory>Ferny_Animals</parentCategory>
                        </li>
                        </modExtensions>
                    </value>
                </Operation>

<!-- OUTREACH -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ThingDef[@Name="VFEI2_ThumperBase"]/designationCategory</xpath>
                    <value>
                        <designationCategory>Ferny_Outreach</designationCategory>
                    </value>
                </Operation>
</Patch>